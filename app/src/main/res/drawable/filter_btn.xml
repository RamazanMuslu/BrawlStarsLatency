<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Kenar rengi ve kalınlığı -->
    <stroke
        android:width="10dp"
        android:color="#000000" /> <!-- kırmızı kenarlık -->

    <!-- Arka plan rengi -->
    <solid android:color="#FF9800" /> <!-- beyaz arka plan -->

    <!-- Köşe yuvarlatma -->
    <corners android:radius="8dp" />

    <!-- İç boşluk -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
